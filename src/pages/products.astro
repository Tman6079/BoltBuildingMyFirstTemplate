---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import Footer from '../components/Footer.astro';
import { content } from '../config/content';

const { company } = content;
---

<Layout title="Our Products - Professional Roofing Solutions">
  <Navbar client:load />
  
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1632778149955-e80f8ceca2e8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
        alt="Professional roofing products and materials"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="max-w-3xl">
        <h1 class="text-5xl font-bold text-white mb-6">
          Trusted Roofing Contractor in {company.address}
        </h1>
        <p class="text-2xl text-white mb-8">
          Proudly Serving the Area Since 1973
        </p>
        <div class="space-y-4">
          <div class="flex items-center text-white">
            <svg class="w-6 h-6 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            A+ BBB Accredited
          </div>
          <div class="flex items-center text-white">
            <svg class="w-6 h-6 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Member of the URCA
          </div>
          <div class="flex items-center text-white">
            <svg class="w-6 h-6 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Zero Money Down Financing
          </div>
        </div>
        <a 
          href="#contact"
          class="inline-block mt-8 px-8 py-4 bg-primary hover:bg-primary-dark text-white font-semibold rounded-full transition-colors"
        >
          SCHEDULE YOUR FREE ESTIMATE
        </a>
      </div>
    </div>
  </section>

  <!-- Company Info Section -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center mb-8">
            <img src="/logo.png" alt={`${company.name} Logo`} class="h-16" />
            <h2 class="text-3xl font-bold ml-4">{company.name}</h2>
          </div>
          <p class="text-gray-600 mb-4">
            {company.address}
          </p>
          <div class="flex items-center text-2xl font-bold text-primary mb-8">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {company.phone}
          </div>
          <h3 class="text-2xl font-bold mb-6">
            Experts in Sandy and Salt Lake City's Residential Roofing Services
          </h3>
          <div class="prose prose-lg">
            <p>
              With years of experience serving the local community, we've built our reputation on quality workmanship and exceptional customer service. Our team of certified professionals is dedicated to providing top-tier roofing solutions that protect your most valuable asset - your property.
            </p>
          </div>
        </div>
        <div>
          <img 
            src="https://images.unsplash.com/photo-1632778149955-e80f8ceca2e8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
            alt="Professional roofing installation"
            class="rounded-lg shadow-xl w-full h-[400px] object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>