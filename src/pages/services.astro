---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar';
import FinalCta from '../components/FinalCta.astro';
import Footer from '../components/Footer.astro';
import { servicesContent } from '../config/servicesContent';

const { hero, intro, mainServices, additionalServices, cta } = servicesContent;
---

<Layout title="Our Services - Professional Roofing Solutions">
  <Navbar client:load />
  
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20">
    <div class="absolute inset-0">
      <img
        src={hero.image.src}
        alt={hero.image.alt}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-secondary-dark/80"></div>
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex justify-between items-center">
        <h1 class="text-4xl md:text-5xl font-bold text-white">{hero.title}</h1>
        <a href={hero.cta.href} class="bg-primary hover:bg-primary-dark text-white font-semibold px-6 py-3 rounded-full transition-colors">
          {hero.cta.text}
        </a>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
        {intro.title}
      </h2>
      <p class="text-gray-600 text-center mb-16">
        {intro.subtitle}
      </p>

      <!-- First Row of Services -->
      <div class="grid md:grid-cols-3 gap-8 mb-16">
        {mainServices.map((serviceCategory) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="aspect-w-16 aspect-h-9">
              <img 
                src={serviceCategory.image.src}
                alt={serviceCategory.image.alt}
                class="w-full h-64 object-cover"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold mb-4">{serviceCategory.category}</h3>
              <ul class="space-y-2">
                {serviceCategory.items.map((item) => (
                  <li class="flex items-center text-gray-700">
                    <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
              <a 
                href={cta.href}
                class="inline-block w-full text-center mt-6 bg-primary hover:bg-primary-dark text-white font-semibold px-6 py-3 rounded-full transition-colors"
              >
                {cta.text} →
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- Second Row of Services -->
      <div class="grid md:grid-cols-3 gap-8">
        {additionalServices.map((serviceCategory) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <div class="aspect-w-16 aspect-h-9">
              <img 
                src={serviceCategory.image.src}
                alt={serviceCategory.image.alt}
                class="w-full h-64 object-cover"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold mb-4">{serviceCategory.category}</h3>
              <ul class="space-y-2">
                {serviceCategory.items.map((item) => (
                  <li class="flex items-center text-gray-700">
                    <svg class="w-5 h-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {item}
                  </li>
                ))}
              </ul>
              <a 
                href={cta.href}
                class="inline-block w-full text-center mt-6 bg-primary hover:bg-primary-dark text-white font-semibold px-6 py-3 rounded-full transition-colors"
              >
                {cta.text} →
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <FinalCta />
  <Footer />
</Layout>