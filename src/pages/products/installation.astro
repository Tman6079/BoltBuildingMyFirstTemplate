---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar';
import Footer from '../../components/Footer.astro';
import FinalCta from '../../components/FinalCta.astro';
import { productsContent } from '../../config/productsContent';
import { roofingTypesContent } from '../../config/roofingTypesContent';

const { hero, companyInfo } = productsContent;
---

<Layout title="Professional Roofing Installation Services">
  <Navbar client:load />
  
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center">
    <div class="absolute inset-0">
      <img
        src={hero.image.src}
        alt={hero.image.alt}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="max-w-3xl">
        <h1 class="text-6xl font-bold text-white mb-6">
          Professional Roofing Installation
        </h1>
        <p class="text-3xl text-white mb-8">
          Expert Installation Services by Certified Professionals
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold mb-6 text-center text-primary">
        Expert Roofing Installation Services
      </h2>
      <div class="flex flex-col gap-6">
        <div>
          <img 
            src={companyInfo.image.src}
            alt="Professional roofing installation process"
            class="rounded-lg shadow-xl w-full h-[400px] object-cover mb-6"
          />
        </div>
        <div class="prose prose-lg max-w-none">
          <p>Our professional roofing installation services are designed to provide you with a durable, weather-resistant roof that protects your home for years to come. We use only the highest quality materials and follow strict installation procedures to ensure optimal performance and longevity.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Roofing Types Section -->
  <section class="py-12 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-16">
        {Object.entries(roofingTypesContent).map(([key, category]) => (
          <div>
            <h3 class="text-4xl font-bold mb-6 text-secondary">
              <a href={`/products/installation/${key}`} class="hover:text-primary transition-colors">
                {category.title}
              </a>
            </h3>
            <p class="text-xl text-gray-600 mb-8">{category.description}</p>
            <div class="space-y-8">
              {category.types.map((type) => (
                <div>
                  <h4 class="text-2xl font-bold mb-3 text-primary">{type.name}</h4>
                  <p class="text-lg text-gray-600">{type.description}</p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <FinalCta />
  <Footer />
</Layout>