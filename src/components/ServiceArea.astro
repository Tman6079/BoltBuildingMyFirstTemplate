---
const serviceAreas = [
  { name: "Brentwood", link: "/service-areas/brentwood" },
  { name: "Clarksville", link: "/service-areas/clarksville" },
  { name: "Gallatin", link: "/service-areas/gallatin" },
  { name: "Green Hills", link: "/service-areas/green-hills" },
  { name: "Hendersonville", link: "/service-areas/hendersonville" },
  { name: "Lebanon", link: "/service-areas/lebanon" },
  { name: "Mount Juliet", link: "/service-areas/mount-juliet" },
  { name: "Murfreesboro", link: "/service-areas/murfreesboro" },
  { name: "Springfield", link: "/service-areas/springfield" }
];
---

<section class="py-20 bg-white relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-center mb-16">
      Areas We Service
      <div class="w-32 h-1 bg-red-500 mx-auto mt-4"></div>
    </h2>

    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div>
        <p class="text-lg text-gray-700 mb-8">
          Joes Roofing proudly provide roofing services to Nashville and
          the surrounding areas including:
        </p>
        
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
          {serviceAreas.map((area) => (
            <a 
              href={area.link}
              class="flex items-center text-gray-700 hover:text-red-500 transition-colors"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              {area.name}
            </a>
          ))}
        </div>
      </div>

      <div class="relative w-full h-[400px] rounded-lg overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d206674.13069150366!2d-86.90357898380309!3d36.18812618373725!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8864ec3213eb903d%3A0x7d3fb9d0a1e9daa0!2sNashville%2C%20TN!5e0!3m2!1sen!2sus!4v1644884732165!5m2!1sen!2sus"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          class="absolute inset-0"
        ></iframe>
      </div>
    </div>
  </div>
</section>