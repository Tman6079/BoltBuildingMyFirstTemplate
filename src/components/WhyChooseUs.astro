<section class="relative bg-[#1E1B4B] py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-white text-center mb-16">
      Why Customers Choose Joes Roofing<br />
      <span class="block">for their Roofing Needs</span>
      <div class="w-32 h-1 bg-red-500 mx-auto mt-4"></div>
    </h2>

    <div class="grid md:grid-cols-2 gap-12">
      {features.map((feature) => (
        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 12L11 14L15 10M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div>
            <h3 class={`text-xl font-semibold mb-2 ${feature.textColor}`}>
              {feature.title}
            </h3>
            <p class="text-gray-300">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Wave shape divider -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg class="fill-red-500" viewBox="0 0 1440 100" xmlns="http://www.w3.org/2000/svg">
